<div class="example">
  <p>
    Simplest scenario:
  </p>


  <pre>
    \{{task-button
      task=doSomething
      click=(perform doSomething)
      idleText="Click me"
      runningText="Working on it"
      type="button"
      runningClass="working"}}
  </pre>

  {{task-button
    task=doSomething
    click=(perform doSomething)
    idleText="Click me"
    runningText="Working on it"
    type="button"
    runningClass="working"}}
